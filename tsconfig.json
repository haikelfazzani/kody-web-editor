{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2017",
    "allowJs": true,
    "alwaysStrict": true,
    "lib": ["dom", "es2015", "es2017"],
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests"]
}
